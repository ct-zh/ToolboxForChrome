{
  "manifest_version": 3,
  "name": "DevToolkit",
  "version": "1.0",
  "description": "开发者工具集合",
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "clipboardWrite",
    "clipboardRead"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval' http://localhost:* http://127.0.0.1:*; object-src 'self';"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "popup/timestamp.html",
        "popup/timestamp.js",
        "popup/qrcode.html",
        "popup/qrcode.js",
        "js/qrcode.min.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}